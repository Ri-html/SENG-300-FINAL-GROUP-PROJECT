<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" prefWidth="600" prefHeight="800" style="-fx-background-color: black;">

    <!-- Back Button -->
    <Button text="Back" layoutX="20" layoutY="20" style="-fx-background-color: white; -fx-font-size: 16;" />

    <!-- Leaderboard Title -->
    <Text text="Leaderboard" layoutX="230" layoutY="70" style="-fx-fill: white; -fx-font-size: 24;" />

    <!-- Top 3 Players -->
    <HBox spacing="20" layoutX="150" layoutY="100" alignment="center">
        <VBox alignment="center">
            <Text text="2nd player and stats" style="-fx-fill: white; -fx-font-size: 14;" />
            <Button prefWidth="80" prefHeight="80" style="-fx-background-radius: 50; -fx-background-color: white;" />
        </VBox>
        <VBox alignment="center">
            <Text text="1st player and stats" style="-fx-fill: white; -fx-font-size: 14;" />
            <Button prefWidth="100" prefHeight="100" style="-fx-background-radius: 50; -fx-background-color: white;" />
        </VBox>
        <VBox alignment="center">
            <Text text="3rd player and stats" style="-fx-fill: white; -fx-font-size: 14;" />
            <Button prefWidth="80" prefHeight="80" style="-fx-background-radius: 50; -fx-background-color: white;" />
        </VBox>
    </HBox>

    <!-- Remaining Players -->
    <HBox spacing="20" layoutX="50" layoutY="250">
        <VBox spacing="10">
            <Button text="4th player and stats" prefWidth="200" style="-fx-background-color: white;" />
            <Button text="5th player and stats" prefWidth="200" style="-fx-background-color: white;" />
            <Button text="6th player and stats" prefWidth="200" style="-fx-background-color: white;" />
            <Button text="7th player and stats" prefWidth="200" style="-fx-background-color: white;" />
            <Button text="8th player and stats" prefWidth="200" style="-fx-background-color: white;" />
        </VBox>
        <VBox spacing="10">
            <Button text="9th player and stats" prefWidth="200" style="-fx-background-color: white;" />
            <Button text="10th player and stats" prefWidth="200" style="-fx-background-color: white;" />
            <Button text="11th player and stats" prefWidth="200" style="-fx-background-color: white;" />
            <Button text="12th player and stats" prefWidth="200" style="-fx-background-color: white;" />
            <Button text="13th player and stats" prefWidth="200" style="-fx-background-color: white;" />
        </VBox>
    </HBox>

</AnchorPane>
