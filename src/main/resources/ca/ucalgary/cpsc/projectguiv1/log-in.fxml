<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="256.0" prefWidth="348.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="ca.ucalgary.cpsc.projectguiv1.MainController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <Label text="Login">
      <font>
         <Font size="24.0" />
      </font>
   </Label>
   <Label text="Username" />
   <TextField />
   <Label text="Password" />
   <TextField />
   <Label fx:id="signUpLink" onMouseClicked="#onSignUpLinkClicked" text="Don't have an account? Sign up" />
   <Label fx:id="resetPasswordLink" onMouseClicked="#onResetPasswordLinkClick" text="Reset Password" />

  <Label fx:id="welcomeText" />
  <Button onAction="#onLoginButtonClick" text="Login" />
</VBox>
